<h1><%= link_to @entry.skill.name, skill_path(:id => @entry.skill_id) %></h1>
<h2><%= @entry.hours %> hours</h2>
<h3><%= @entry.note %></h3>
<% if @entry.user.username? %>
<h3><%= link_to @entry.user.username, profile_path(:id => @entry.user) %></h3>
<% else %>
<h3><%= link_to @entry.user.email, profile_path(:id => @entry.user) %></h3>
<% end %>
<% if @entry.user == current_user %>
<p><%= link_to "Edit this Entry", edit_entry_path %></p>
<% else %>
<% end %>

<div class="button"><%= link_to "Add Another Entry", new_entry_path %></div>
<p>Or, return to <%= link_to "Home Page", root_path %></p>