<h1><%= @skill.name %></h1>
<h2><%= @skill.description %></h2>

<ul>
<% @skill.entries.each do |entry| %>
<li> 
  <% if entry.user == current_user %> 
  <%= entry.user.username %> <span class="tiny"><%= link_to "your profile", profile_path(:id => entry.user) %></span>
  <% else %>
  <%= link_to entry.user.username, profile_path(:id => entry.user) %>
  <% end %><br />
  <%= link_to entry.skill.name, skill_path(:id => entry.skill) %>  <i>hours: <%= entry.hours %></i><br />
    <%= link_to entry.note, entry_path(:id => entry) %> 
    <hr>
    </li>
<% end %>
</ul>


<div class="button">
<%= link_to "Add A Skill to the Database", new_skill_path %></div>

<p><%= link_to "See all Skills", skills_path %> || <%= link_to "Home Page", root_path %></p>

