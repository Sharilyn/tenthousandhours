<!DOCTYPE html>
<html>
<%= favicon_link_tag %>
<head>
  <title>Ten Thousand Hours</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="nav">
  <div class="first">
    <h1>tenTHOUSANDhours</h1> 
  </div>
  <div class="middle">
  <%= link_to "Home Page", root_path %> || <%= link_to "All Skills", skills_path %>
  </div>
    <% if user_signed_in? %>
    <div class="second"><p><b><%= link_to "Add a New Entry", new_entry_path %></b> | | Welcome, <%= current_user.username %>! | | <%= link_to "Sign Me Out", destroy_user_session_path, method: :delete %></p></div>
    <% else %>
    <div class="second"><%= link_to "Sign In", new_user_session_path %> | <%= link_to "New User", new_user_registration_path %></div>
    <% end %>
    
    </div>



    <% if notice %>
    <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert"><%= alert %></p>
      <% end %>
<%= yield %>

</body>
</html>
